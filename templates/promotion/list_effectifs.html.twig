{% extends 'base.html.twig' %}

{% block title %}Effectifs{% endblock %}

{% block body %}

    {% set total = 0 %}

    <h1>Liste des effectifs</h1>
    {# Liste des effectifs #}
    <table>
        <thead>
            <tr>
                <th>Promotion</th>
                <th>Effectifs</th>
            </tr>
        </thead>
        <tbody>
        {% for effectif in effectifs %}
            <tr>
                <td>{{ effectif.nom }}</td>
                <td>{{ effectif.effectifs }}</td>
                {% set total = total + effectif.effectifs %}
           </tr>
        {% else %}
            <tr>
                <td colspan=\"3\">Aucun effectif trouv√©</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
    <p>Total des effectifs : {{ total }}</p>
    <h2>Graphique</h2>
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
{% endblock %}

{% block javascripts %}
        <script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>
        <script>
            window.onload = function() {

                let chart = new CanvasJS.Chart("chartContainer", {
                    theme: "light2", // "light1", "light2", "dark1", "dark2"
                    exportEnabled: true,
                    animationEnabled: true,
                    title: {
                        text: "Effectifs promotions"
                    },
                    data: [{
                        type: "pie",
                        startAngle: 25,
                        toolTipContent: "<b>{label}</b>: {y}%",
                        showInLegend: "true",
                        legendText: "{label}",
                        indexLabelFontSize: 16,
                        indexLabel: "{label} - {y}%",
                        dataPoints: [
                            {{ data | raw }}
                        ]
                    }]
                });
                chart.render();

            }
        </script>
{% endblock %}